<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
<%- include('./partials/nav') %>

  <h1>Full Menu <%= RESTAURANT.menu %></h1>
  <% menu.forEach(item => {

   <li><%= item.name %></li> 
   <li><%= item.price %></li> 
   <li><%= item.rating %></li> 
   <li><%= item.details %></li> 
    
    <% if (item.category === 'mains') { %>
        <h2>Mains
            <li><%= item.name %></li> 
            <li><%= item.price %></li> 
            <li><%= item.rating %></li> 
            <li><%= item.details %></li> 
         </h2>
        
<% }  else if (item.category === 'desserts') { %>
        <h2>Desserts
            <li><%= item.name %></li> 
            <li><%= item.price %></li> 
            <li><%= item.rating %></li> 
            <li><%= item.details %></li> 
        </h2>
 <% } else { %>
    <h2>Sides
        <li><%= item.name %></li> 
        <li><%= item.price %></li> 
        <li><%= item.rating %></li> 
         <li><%= item.details %></li> 
    </h2>

 <% } %>

  <% }); %>
</body>
</html>
